<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:background="@color/colorPrimaryDark"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">


                <ImageView
                    android:id="@+id/iv_Luman"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/luman" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorDullBlack">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <Button
                    android:id="@+id/tv_Home"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/home"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="Home"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />
                <Button
                    android:id="@+id/tv_Fleet"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/home"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="Fleet"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />



                <Button
                    android:id="@+id/tv_Mechanic_List"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/list"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="Mechanic List"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/tv_Verify"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/ic_verified"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="Opening Balance"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/tv_SendReport"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/wh_remark"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="LME Report"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/tv_Remark"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/ic_rem"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="Remark"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/tv_Profile"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/face"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="Profile"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />


                <Button
                    android:id="@+id/tv_Pass"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="Change Password"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/tv_Beat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/ic_beat_plan"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="Beat Plan"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />


                <Button
                    android:id="@+id/tv_Info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/info"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:padding="5dp"
                    android:text="Information"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/tv_About"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/about"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:padding="5dp"
                    android:text="About Us"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_Design"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_bck"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:padding="5dp"
                    android:text="Design Capabilities"
                    android:textColor="@color/colorDullBlack"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_Plants"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_bck"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:padding="5dp"
                    android:text="Luman Plants"
                    android:textColor="@color/colorDullBlack"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_Achieve"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_bck"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:padding="5dp"
                    android:text="Achievements"
                    android:textColor="@color/colorDullBlack"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/tv_Logout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="#e6000000"
                    android:drawableLeft="@drawable/exit"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:padding="5dp"
                    android:text="Logout"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
