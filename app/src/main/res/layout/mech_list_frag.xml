<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorNew">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/ic_apps" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_menu"
            android:layout_toRightOf="@+id/img_menu"
            android:text="Select Mechanic"
            android:textColor="@color/colorWhite"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />
    </RelativeLayout>

    <EditText
        android:padding="5dp"
        android:backgroundTint="@color/colorWhite"
        android:background="@drawable/splash_bck"
        android:id="@+id/showlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:elevation="10dp"
        android:hint="Search"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textStyle="normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_marginBottom="48dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_Add_Mechanic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:background="@color/colorNew"
        android:text="Add mechanic"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

</LinearLayout>