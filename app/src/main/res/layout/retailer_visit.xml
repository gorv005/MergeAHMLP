<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    app:cardBackgroundColor="#03ece9e9"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="#000"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/curved_outline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">


            <TextView
                android:shadowRadius="10"
                android:shadowDy="8"
                android:shadowColor="@color/colorDullBlack"
                android:elevation="10dp"
                android:id="@+id/tv_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:text="12090934"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:elevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_Pass"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:text="Pts."
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textSize="14dp"
                android:id="@+id/r_passbook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:text="PASSBOOK NUMBER  : 120909"
                android:textColor="#000" />

            <TextView
                android:textSize="12dp"
                android:id="@+id/r_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_Pass"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="SHOP NAME : Test Shop Name"
                android:textColor="#000" />

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:text="City  : Noida"
                android:visibility="gone" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:text="Phone : +919999999999"
                android:visibility="gone" />

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:text="Address  : C4, Noida, India-201301"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>