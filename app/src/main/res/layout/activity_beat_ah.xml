<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24dp"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:text="BEAT PLAN "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:background="@color/colorPrimaryDark"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#fff"
        android:text="Select Market"
        android:id="@+id/select_Market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="...OR..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:background="@drawable/splash_bck"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="Write Remark Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <EditText
            android:id="@+id/et_Beat_Remark"
            android:backgroundTint="#07ffffff"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:hint="Give Remark Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/Submit"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"
            android:text="Submit"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:text="*Kindly Submit Report if you do not want to select Market "
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>