<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#00ffffff"
            android:elevation="5dp"
            android:padding="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/luman" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:text="AH Remark"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/tv_About"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bck"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_help"
                    android:drawablePadding="10dp"
                    android:padding="18dp"
                    android:text="About Us"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/tv_Design"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bck"
                    android:clickable="true"
                    android:drawableLeft="@drawable/design"
                    android:drawablePadding="10dp"
                    android:padding="18dp"
                    android:text="Design Capabilities"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/tv_Plants"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bck"
                    android:clickable="true"
                    android:drawableLeft="@drawable/plants"
                    android:drawablePadding="10dp"
                    android:padding="18dp"
                    android:text="Luman Plants"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/tv_Achieve"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bck"
                    android:clickable="true"
                    android:drawableLeft="@drawable/achieve"
                    android:drawablePadding="10dp"
                    android:padding="18dp"
                    android:text="Achievements"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>


</ScrollView>