<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/img_ID"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="14dp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:text="Enter Opening Balance :"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <EditText
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14dp"
            android:textColorHint="@color/colorlightBlack"
            android:padding="8dp"
            android:background="@drawable/et_back_drawable"
            android:layout_weight="1"
            android:inputType="number"
            android:id="@+id/et_OpeningBalance"
            android:hint="Opening balance"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <Button
        android:layout_marginTop="15dp"
        android:text="Validate"
        android:onClick="verifyOb"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorDullBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
